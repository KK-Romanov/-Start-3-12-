<%= flash[:notice] %>
<h1>Books List</h1>

<table>
   <thead>
      <tr>
         <th>Name</th>
         <th>About</th>
         <th colspan "4">Option</th>
      </tr>
   </thead>
   <tbody>
       <!--each do =繰り返し-->
   <% @books.each do |book| %>
       <tr>
           <td><%= book.title %></td>
           <td><%= book.body %></td>
           <td>
               <%= link_to "show" ,book_path(book.id), class:"show" %>
           </td>
           <td>
               <%= link_to "Edit" ,edit_book_path(book.id), class:"edit" %>
           </td>
           <td>
               <%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => " get ready to delete？", class:"destroy" %>
           </td>
        </tr>
    <% end %>
   </tbody>
</table>

<h1>New Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
	
  <h4>本文</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
  
<% end %>

